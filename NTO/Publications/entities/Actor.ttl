@prefix ogit.Publications:      <http://www.purl.org/ogit/Publications/> .
@prefix owl:                    <http://www.w3.org/2002/07/owl#> .
@prefix ogit:                   <http://www.purl.org/ogit/> .
@prefix rdfs:                   <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dcterms:                <http://purl.org/dc/terms/> .
@prefix ogit.Forum:             <http://www.purl.org/ogit/Forum/> .

ogit.Publications:Actor
	a rdfs:Class;
	rdfs:subClassOf ogit:Entity;
	rdfs:label "Actor";
	dcterms:description "Describes an Actor receiving or performing an Action to other Actor in an Event.";
	# For ranges, see http://dublincore.org/documents/dcmi-period/
	dcterms:valid "start=2025-09-04;";
	dcterms:creator "esteban.moreno@almato.de";
	ogit:scope "NTO";
	ogit:parent ogit:Node;
	ogit:mandatory-attributes (
		ogit:name
	);
	ogit:optional-attributes (
		ogit.Publication:actorCode
		ogit:isoCode #country code
		ogit.Publication:groupCode #groupCode
		ogit.Publication:ethnicCode #ethnicCode
		ogit:religion # list of religions
		ogit.Publication:roleCode #roleCodes -> list
	);
	ogit:indexed-attributes (
		
	);
	ogit:allowed (
		[ ogit:locatedIn ogit:Location ]
		[ ogit:performs ogit.Publication:Action ]
		[ ogit:belongs ogit:Country ]
		[ ogit:belongs ogit:Role ]
		[ ogit:belongs ogit:City ]
		[ ogit:belongs ogit:Person ]
		[ ogit:belongs ogit:Location ]
	);
.
